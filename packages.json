                            }
                        }
                    ],
                    "package_status_instructions":[
                        {
                            "op": "run_cmd",
                            "data": {
                                "status_check_cmd": "docker ps --filter 'name=lora-pkt-frwdr' | grep lora-pkt-frwdr"
